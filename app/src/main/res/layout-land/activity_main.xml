<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card"
            card_view:cardCornerRadius="@dimen/corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/quote1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/quote"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="@dimen/heightImage"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mountain4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view"
                            android:background="@color/background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/corner"
                            android:fontFamily="@font/allerta_stencil"
                            android:gravity="center"
                            android:text="@string/name"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/name"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:text="@string/des"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/des" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view"
                            android:background="@color/background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="map"
                            android:drawableLeft="@drawable/placehoder"
                            android:drawablePadding="@dimen/drPadding"
                            android:fontFamily="sans-serif"
                            android:padding="@dimen/padding"
                            android:text="@string/addressLand"
                            android:textColor="@color/grey"
                            android:textColorLink="@color/grey" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view"
                            android:background="@color/background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="phone"
                            android:drawableLeft="@drawable/telephone"
                            android:drawablePadding="@dimen/drPadding"
                            android:fontFamily="sans-serif"
                            android:padding="@dimen/padding"
                            android:text="@string/phone"
                            android:textColor="@color/grey"
                            android:textColorLink="@color/grey" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view"
                            android:background="@color/background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:drawableLeft="@drawable/home"
                            android:drawablePadding="@dimen/drPadding"
                            android:fontFamily="sans-serif"
                            android:padding="@dimen/padding"
                            android:text="@string/website"
                            android:textColor="@color/grey"
                            android:textColorLink="@color/grey" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
